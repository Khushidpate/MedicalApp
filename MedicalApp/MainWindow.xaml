<Window x:Class="MedicalApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Username" />
            <TextBox Name="UsernameTextBox" Width="200" />
            <TextBlock Text="Password" Margin="0,10,0,0" />
            <PasswordBox Name="PasswordBox" Width="200" />
            <Button Content="Login" Click="LoginButton_Click" Margin="0,10,0,0" />
            <TextBlock Text="New User? Sign up" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
