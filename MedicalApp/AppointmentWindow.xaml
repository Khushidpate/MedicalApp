<Window x:Class="MedicalApp.AppointmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Appointment" Height="400" Width="600">
    <Grid>
        <StackPanel>
            <TextBlock Text="Create Appointment" FontWeight="Bold" Margin="10" />
            <TextBlock Text="Select Doctor" />
            <ComboBox Name="DoctorComboBox" Width="200" Margin="0,10,0,0"/>
            <TextBlock Text="Date" />
            <DatePicker Name="AppointmentDatePicker" Width="200" />
            <TextBlock Text="Time" />
            <TextBox Name="TimeTextBox" Width="200" />
            <TextBlock Text="Disease" Margin="10,0,0,0" />
            <TextBox Name="DiseaseTextBox" Width="200" />
            <TextBlock Text="Emergency" Margin="10,0,0,0" />
            <CheckBox Name="EmergencyCheckBox" />
            <Button Content="Reserve Appointment" Click="ReserveAppointment_Click" Margin="10" />
            <Button Content="Cancel Appointment" Click="CancelAppointment_Click" Margin="10" />
            <Button Content="Home" Click="Home_Click" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
