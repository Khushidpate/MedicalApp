<Window x:Class="MedicalApp.PrescriptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Prescriptions" Height="400" Width="600">
    <Grid>
        <StackPanel>
            <TextBlock Text="Prescriptions" FontWeight="Bold" Margin="10" />
            <ListBox Name="PrescriptionsListBox" Width="200" Height="100" Margin="0,10,0,0"/>
            <Button Content="Add Prescription" Click="AddPrescription_Click" Margin="10" />
            <Button Content="Home" Click="Home_Click" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
