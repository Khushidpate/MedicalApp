<Window x:Class="MedicalApp.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Profile" Height="400" Width="600">
    <Grid>
        <StackPanel>
            <TextBlock Text="Profile" FontWeight="Bold" Margin="10" />
            <TextBlock Text="Name" />
            <TextBox Name="NameTextBox" Width="200" />
            <TextBlock Text="Date of Birth" />
            <DatePicker Name="DOBPicker" Width="200" />
            <TextBlock Text="Contact Number" />
            <TextBox Name="ContactNumberTextBox" Width="200" />
            <TextBlock Text="Weight" />
            <TextBox Name="WeightTextBox" Width="200" />
            <TextBlock Text="Emergency Contact Number" />
            <TextBox Name="EmergencyContactNumberTextBox" Width="200" />
            <TextBlock Text="Blood Group" />
            <TextBox Name="BloodGroupTextBox" Width="200" />
            <TextBlock Text="Insurance Number" />
            <TextBox Name="InsuranceNumberTextBox" Width="200" />
            <TextBlock Text="Past Medical History" />
            <TextBox Name="PastMedicalHistoryTextBox" Width="200" Height="100" />
            <Button Content="Update" Click="Update_Click" Margin="10" />
            <Button Content="Home" Click="Home_Click" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
